{
  "name": "root",
  "version": "0.53.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf packages/*/dist",
    "build:test": "act -j test --secret-file=.env",
    "build": "pnpm --filter @vanblog/server --filter @vanblog/theme-default --filter @vanblog/admin -r --parallel build",
    "build:admin": "pnpm --filter @vanblog/admin build",
    "build:server": "pnpm --filter @vanblog/server build",
    "build:website": "pnpm --filter @vanblog/theme-default build",
    "dev": "pnpm --filter @vanblog/server --filter @vanblog/admin -r --parallel dev",
    "dev:server": "lerna run dev:noweb --scope @vanblog/server",
    "dev:website": "lerna run dev --scope @vanblog/theme-default",
    "dev:admin": "lerna run dev --scope @vanblog/admin",
    "docs:build": "vuepress build ./docs",
    "docs:clean-dev": "vuepress dev ./docs --clean-cache",
    "docs:dev": "vuepress dev ./docs",
    "docs:dev-https": "vuepress dev ./docs --help",
    "kill": "sudo bash scripts/kill-all.sh",
    "release:local": "act -j local-build --secret-file=.env",
    "release": "standard-version",
    "release-note": "node scripts/releaseNote.js",
    "release-doc": "node scripts/releaseDoc.js",
    "release-major": "standard-version --release-as major",
    "release-minor": "standard-version --release-as minor",
    "release-patch": "standard-version --release-as patch",
    "sync-aliyun": "bash scripts/sync-aliyuncs.sh",
    "webhook": "node scripts/webhook.js"
  },
  "packageManager": "pnpm@8.5.1",
  "devDependencies": {
    "@vuepress/client": "2.0.0-beta.62",
    "@vuepress/utils": "2.0.0-beta.62",
    "cross-env": "^7.0.3",
    "lerna": "^6.6.2",
    "nan": "^2.17.0",
    "standard-version": "^9.5.0",
    "vue": "^3.3.2",
    "vuepress": "2.0.0-beta.62",
    "vuepress-plugin-redirect": "2.0.0-beta.211",
    "vuepress-plugin-search-pro": "2.0.0-beta.211",
    "vuepress-theme-hope": "2.0.0-beta.211"
  }
}